{
	"name": "write-poetry",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "Giacomo Secchi",
	"license": "GPL-2.0-or-later",
	"dependencies": {
		"@wordpress/api-fetch": "^6.42.0",
		"@wordpress/components": "^25.11.0",
		"@wordpress/data": "^9.15.0",
		"@wordpress/date": "^4.45.0",
		"@wordpress/edit-post": "^7.22.0",
		"@wordpress/i18n": "^4.45.0",
		"@wordpress/icons": "^9.36.0",
		"@wordpress/plugins": "^6.13.0",
		"animate.css": "^4.1.1",
		"swiper": "^11.0.4"
	},
	"devDependencies": {
		"@wordpress/env": "^8.11.0",
		"@wordpress/scripts": "^26.16.0"
	},
  "prettier": "@wordpress/prettier-config",
	"scripts": {
		"build": "wp-scripts build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start",
    "start:hot": "wp-scripts start --hot",
		"wp-env": "wp-env",
    "env:start": "wp-env start && (npm run start)",
		"env:start:debug": "wp-env start --xdebug",
		"env:stop": "wp-env stop",
		"composer": "wp-env run cli --env-cwd=wp-content/plugins/write-poetry composer"
	},
	"npmpackagejsonlint": {
		"extends": "@wordpress/npm-package-json-lint-config",
		"rules": {
			"require-keywords": "off",
			"require-bugs": "off",
			"require-homepage": "off",
			"require-repository": "off",
			"require-version": "off"
		}
	},
  "files": [
    "assets",
    "build",
    "includes",
    "vendor",
    "woocommerce",
    "index.php",
    "readme.txt",
    "write-poetry.php",
    "uninstall.php"
  ]
}
